<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Post</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <%= image_tag(@post.feature.thumb.url) %>

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Path:</strong>
        <%= @post.path %>
      </p>

      <p>
        <strong>Slug:</strong>
        <%= @post.slug %>
      </p>

      <p>
        <strong>Author:</strong>
        <%= author_link(@post.author) %>
      </p>

      <p>
        <strong>META Keywords:</strong>
        <%= @post.meta_keywords %>
      </p>

      <p>
        <strong>META Description:</strong>
        <%= @post.meta_description %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @post.content %>
      </p>
    </div>
  </div>
</div>
